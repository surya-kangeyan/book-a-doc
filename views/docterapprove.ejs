<%- include ('./partials/header')%>
<h2>Approval Page!</h2>
<div class="approve">
    <div class="container">
        <div class="jumbotron">

            <div class="container">
                <form action="/doctor/approve/message" method="POST">
                      <input type="hidden" name="id" value=<%=id %>>
                <div>
                    <label>Contact Number :
                        <input type="tel" name="phonenumber" id ="number" value=<%= number %> ></input>
                    </label>
                </div>
                <div>
                    <label> Date :
                         <input style="margin-left:80px" type="date" name="date" id="date1" placeholder="Appoinment Date"></input>
                    </label>
                </div>  
                <div>
                    <label>Time :
                         <input style="margin-left:80px" type="time" name="time" id="time1" placeholder="Appoinment Time"    min="09:00" max="21:00" required></input>
                    </label>
                    <div>
                        <small><strong>
                            *
                        </strong> Clinic hours are 9am to 6pm<strong>
                            *
                        </strong </small>
                    </div>
                    
                </div>
                   <button  class="btn btn-sm btn-primary">
                       Submit
                   </button>
                 
                   </form>
              
            </div>
          <div style="margin-left:15px;margin-top:10px">
            <a href="/doctor/recipts" class="btn btn-warning">Go Back</a>
          </div>
        
        </div>
    </div>
</div>


   

   
<%- include ('./partials/footer') -%>